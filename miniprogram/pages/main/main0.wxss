.dec {
    display: flex;
    flex-direction: column;  /* 垂直排列 */
    justify-content: center; /* 垂直居中 */
    align-items: center;    /* 水平居中 */
    height: 800px;
    border: 1px solid #ccc;
    transition: background-color 1s ease;/* 平滑过渡 */
  }
  
  image {
    width: 350px;  /* 控制图片宽度 */
    height: auto;  /* 高度自适应 */
    margin-bottom: 20px; /* 图片和文字的间距 */
  }
  
  .tt {
    font-size: 32px;
    color: red;
    font-weight: bold;
  }

